<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/corletra">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="11dp"
        android:layout_marginBottom="8dp"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:id="@id/enterprise_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="11dp"
        android:layout_marginBottom="8dp"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:id="@id/no_enterprise_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/fundo"
        android:text="Empresa"
        android:gravity="center"
        android:textColor="@color/corletra"
        android:textSize="15dp"/>

    <TextView
        android:id="@id/enterprise_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empresa 1"
        app:layout_constraintLeft_toRightOf="@id/enterprise_image"
        android:textSize="17sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="#1a0e49"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="14dp" />

    <TextView
        android:id="@id/enterprise_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:fontFamily="sans-serif"
        android:textStyle="italic"
        android:textColor="#8d8c8c"
        tools:text="NegÃ³cio"
        app:layout_constraintLeft_toRightOf="@id/enterprise_image"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/enterprise_name" />

    <TextView
        android:id="@id/enterprise_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#8d8c8c"
        tools:text="Brasil"
        app:layout_constraintLeft_toRightOf="@id/enterprise_image"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/enterprise_type" />

</android.support.constraint.ConstraintLayout>

